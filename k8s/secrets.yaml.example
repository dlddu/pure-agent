# mcp container
apiVersion: v1
kind: Secret
metadata:
  name: mcp-server-secrets
type: Opaque
stringData:
  LINEAR_API_KEY: "your-linear-api-key"
  LINEAR_TEAM_ID: "your-linear-team-id"

---

# agent container
apiVersion: v1
kind: Secret
metadata:
  name: agent-secrets
type: Opaque
stringData:
  CLAUDE_CODE_OAUTH_TOKEN: "your-claude-code-oauth-token"

---

# router container
apiVersion: v1
kind: Secret
metadata:
  name: router-secrets
type: Opaque
stringData:
  AWS_S3_BUCKET_NAME: "your-s3-bucket-name"

---

# export-handler container
apiVersion: v1
kind: Secret
metadata:
  name: export-handler-secrets
type: Opaque
stringData:
  LINEAR_API_KEY: "your-linear-api-key"
  GITHUB_TOKEN: "your-github-token"
